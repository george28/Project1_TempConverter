<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TempConverterActivity"
    android:id="@+id/tempApp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degrees"
        android:id="@+id/degrees_ID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fahrenheit"
        android:id="@+id/fahrenheit_ID"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/degrees_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celcius"
        android:id="@+id/celcius_ID"
        android:layout_marginTop="46dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/fahrenheit_ID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:inputType="numberDecimal"
        android:layout_alignBottom="@+id/fahrenheit_ID"
        android:layout_alignLeft="@+id/degrees_ID"
        android:layout_alignStart="@+id/degrees_ID"
        android:layout_alignRight="@+id/degrees_ID"
        android:layout_alignEnd="@+id/degrees_ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output_ID"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/celcius_ID"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignTop="@+id/celcius_ID"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

</RelativeLayout>
